@model ArchitectureLibraryModels.RegisterUserProfModel
@using ArchitectureLibraryCacheData
<style>
    #UserTypeId-error {
        color: #ff0000;
        display: block;
        font-size: 14px;
        font-weight: bold;
    }
</style>
<div style="color: #0000ff; font-family: Arial; font-size: 14px; font-weight: bold; width: 81%;">
    If you select someone other than <span style="color: #ff0000">"Individual (Retail / Regular)"</span> for User Type, our staff will call and to confirm and approve thereafter
</div>
<div class="row" style="padding-left: 18px; padding-right: 18px;">
    @Html.LabelFor(m => m.UserTypeId, new { @class = "col-form-label" })&nbsp;<span style="color: #0000ff; font-weight: bold;">(Required)</span>
    @if (ArchLibCache.UserTypes.Count == 1)
    {
        @Html.DropDownListFor(m => m.UserTypeId, new SelectList(ArchLibCache.UserTypes, "Value", "Text", Model.UserTypeId), null, new { @class = "form-control", style = "font-size: 14px; width: 54%;" })
    }
    else
    {
        @Html.DropDownListFor(m => m.UserTypeId, new SelectList(ArchLibCache.UserTypes, "Value", "Text", Model.UserTypeId), "--- Select User Type ---", new { @class = "form-control", style = "font-size: 14px; width: 54%;" })
    }
    @Html.Raw(HttpUtility.HtmlDecode(Html.ValidationMessageFor(m => m.UserTypeId, "", new { id = "UserTypeId-error" }).ToHtmlString()))
</div>
