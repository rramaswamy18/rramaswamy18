@using ArchitectureLibraryCacheData
@using ArchitectureLibraryModels
@model OTPModel
@{
    long clientId = ArchLibCache.ClientId;
}
<table>
    <tr>
        <td style="font-family: Arial; font-size: 15px; text-align: left;">
            <span style="font-weight: bold;">Dear Valued Customer,</span>
            <br /><br />
            Your OTP is&nbsp;&nbsp;<span style="color: #0000ff; font-size: 18px; font-weight: bold; letter-spacing: 4px; text-transform: uppercase;">@Model.OTPCode</span>
            <br />
            Your OTP will expire at @(Model.OTPExpiryDate + " " + Model.OTPExpiryTime)
            <br />
            You requested your OTP to be sent as @Model.OTPSendTypeId.ToString()
            <br /><br />
            <span style="background-color: #deecf9;">
                If you did not intend to do this or have any questions, please contact our support @ArchLibCache.GetApplicationDefault(clientId, "ContactPhoneFormatted", "")
                <br /><br />
                Alternatively <a href="@ArchLibCache.GetApplicationDefault(clientId, "BaseUrl", "" )/@Url.Action(ArchLibCache.GetApplicationDefault(0, "ContactUsAction", "" ), ArchLibCache.GetApplicationDefault(0, "ContactUsController", "" ))" target="_blank">Contact Us Here</a> to let us know.
            </span>
        </td>
    </tr>
</table>
<br />
<br />
