@using ArchitectureLibraryCacheData
@{
    var clientId = ArchLibCache.ClientId;
}
@*<h2 class="text-primary" style="color: #000000; font-family: Roboto Helvetica, Arial, sans-serif; font-size: 22px; font-weight: 700;">Feel free to contact us by...</h2>*@
<table class="table-responsive" style="border-style: none; border-width: 0px;">
    <tr>
        <td style="padding-right: 3px; vertical-align: top;">
            <i style="color: #000000; font-size: 27px; font-weight: bold;" class="fa fa-phone"></i>
        </td>
        <td style="padding-right: 3px; vertical-align: top;">
            <a href="tel: @ArchLibCache.GetApplicationDefault(ArchLibCache.ClientId, "ContactPhoneHref", "")" style="color: #0000ff; font-family: Roboto Helvetica, Arial, sans-serif; font-size: 15px; font-weight: bold; text-decoration: underline;">
                @ArchLibCache.GetApplicationDefault(ArchLibCache.ClientId, "ContactPhoneFormatted", "")
            </a>
        </td>
        <td style="padding-right: 3px; text-align: left; vertical-align: top;">
            <span style="color: #000000; font-family: Roboto Helvetica, Arial, sans-serif; font-size: 14px; font-weight: bold; padding: 5px; text-align: left;">
                Phone
            </span>
        </td>
        <td rowspan="5" style="padding-left: 18px; vertical-align: top;">
            <table style="padding: 0px; vertical-align: top;">
                <tr>
                    <td rowspan="5" style="padding: 5px; vertical-align: top;">
                        <img src="~/Images/PostalMail3.jpg" style="height: 45px; width: 45px;">
                    </td>
                    <td style="padding: 5px; vertical-align: top;">
                        <span style="color: #000000; font-family: 'Times New Roman', Roboto, Helvetica, Arial, sans-serif; font-size: 15px; font-weight: 600; padding: 5px; text-align: left;">
                            @ArchLibCache.GetApplicationDefault(clientId, "BusinessName1", "")
                        </span>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 0px; vertical-align: top;">
                        <span style="color: #000000; font-family: 'Times New Roman', Roboto, Helvetica, Arial, sans-serif; font-size: 15px; font-weight: 600; padding: 5px; text-align: left;">
                            @ArchLibCache.GetApplicationDefault(clientId, "AddressLine1", "")
                        </span>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 0px; vertical-align: top;">
                        <span style="color: #000000; font-family: 'Times New Roman', Roboto, Helvetica, Arial, sans-serif; font-size: 15px; font-weight: 600; padding: 5px; text-align: left;">
                            @ArchLibCache.GetApplicationDefault(clientId, "AddressLine1A", "")
                        </span>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 0px; vertical-align: top;">
                        <span style="color: #000000; font-family: 'Times New Roman', Roboto, Helvetica, Arial, sans-serif; font-size: 15px; font-weight: 600; padding: 5px; text-align: left;">
                            @ArchLibCache.GetApplicationDefault(clientId, "AddressLine2", "")
                        </span>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 0px; vertical-align: top;">
                        <span style="color: #000000; font-family: 'Times New Roman', Roboto, Helvetica, Arial, sans-serif; font-size: 15px; font-weight: 600; padding: 5px; text-align: left;">
                            @ArchLibCache.GetApplicationDefault(clientId, "AddressCityName", ""), @ArchLibCache.GetApplicationDefault(clientId, "AddressStateAbbrev", "") @ArchLibCache.GetApplicationDefault(clientId, "AddressZipCode", "")
                        </span>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td style="padding-right: 3px; vertical-align: top;">
            <img src="~/Images/SMSIcon1.png" style="height: 27px; width: 27px;">
        </td>
        <td style="padding-right: 3px; vertical-align: top;">
            <a href="sms: @ArchLibCache.GetApplicationDefault(ArchLibCache.ClientId, "ContactTextPhoneHref", "")" style="color: #0000ff; font-family: Roboto Helvetica, Arial, sans-serif; font-size: 15px; font-weight: bold; text-decoration: underline;">
                @ArchLibCache.GetApplicationDefault(ArchLibCache.ClientId, "ContactTextPhoneFormatted", "")
            </a>
        </td>
        <td style="padding-right: 3px; vertical-align: top;">
            <span style="color: #000000; font-family: Roboto Helvetica, Arial, sans-serif; font-size: 14px; font-weight: bold; padding: 5px; text-align: left;">
                SMS / Message
            </span>
        </td>
    </tr>
    <tr>
        <td style="padding-right: 3px; vertical-align: top;">
            <img src="~/Images/WhatsApp1.png" style="height: 27px; width: 27px;">
        </td>
        <td style="padding-right: 3px; vertical-align: top;">
            <a target="_blank" href="https://api.whatsapp.com/send?phone=@(ArchLibCache.GetApplicationDefault(ArchLibCache.ClientId, "ContactWhatsAppPhone", ""))" style="color: #0000ff; font-family: Roboto Helvetica, Arial, sans-serif; font-size: 15px; font-weight: bold; text-decoration: underline;">
                @ArchLibCache.GetApplicationDefault(ArchLibCache.ClientId, "ContactWhatsAppPhoneFormatted", "")
            </a>
        </td>
        <td style="padding-right: 3px; vertical-align: top;">
            <span style="color: #000000; font-family: Roboto Helvetica, Arial, sans-serif; font-size: 14px; font-weight: bold; padding: 5px; text-align: left;">
                WhatsApp
            </span>
        </td>
    </tr>
    <tr>
        <td style="padding-right: 3px; vertical-align: top;">
            <span class="glyphicon glyphicon-envelope" style="color: #000000; font-size: 18px;"></span>
        </td>
        <td style="padding-right: 3px; vertical-align: top;">
            <a href="@Url.Action("ContactUs", "Home")" style="color: #0000ff; font-family: Robot, sans-serif; font-size: 15px; font-weight: bold; text-decoration: underline;" target="_blank">
                @ArchLibCache.GetApplicationDefault(clientId, "BusinessEmail", "")
            </a>
        </td>
        <td style="padding-right: 3px; vertical-align: top;">
            <span style="color: #000000; font-family: Roboto Helvetica, Arial, sans-serif; font-size: 14px; font-weight: bold; padding: 5px; text-align: left;">
                Contact Us
            </span>
        </td>
    </tr>
</table>
