@model RetailSlnModels.DeliveryInfoDataModel
@{ 
    string buttonChecked, foreColor;
    List<ArchitectureLibraryModels.CodeDataModel> codeDataModels;
}
<style>
    #DeliveryMethodId-error {
        color: #ff0000;
        display: block;
        font-size: 14px;
        font-weight: bold;
    }
</style>
<table>
    <tr>
        <td style="padding-right: 9px; vertical-align: top;">
            <table>
                <tr>
                    <th colspan="3">
                        @Html.Raw(HttpUtility.HtmlDecode(Html.ValidationMessageFor(m => m.DeliveryMethodId, "", new { id = "DeliveryMethodId-error" }).ToHtmlString()))
                    </th>
                </tr>
                @{
                    buttonChecked = "checked='checked'";
                    foreColor = "#0000ff";
                    codeDataModels = ArchitectureLibraryCacheData.LookupCache.CodeTypeModels.First(x => x.CodeTypeNameDesc == "DeliveryMethod").CodeDataModelsCodeDataNameId;
                    for (int i = 0; i < codeDataModels.Count; i++)
                    {
                        <tr>
                            <td style="padding-right: 9px; vertical-align: top;">
                                <input @buttonChecked class="form-control" id="radDeliveryMethodId@(i)" name="DeliveryMethodId" style="color: #000000; font-weight: 900;" type="radio" value="@codeDataModels[i].CodeDataNameId" />
                            </td>
                            <td style="padding-right: 9px; vertical-align: middle;">
                                <img src="~/Images/@codeDataModels[i].CodeDataDesc1" style="height: 27px; width: 36px;" />
                            </td>
                            <th>
                                <span class="col-form-label" style="color: @foreColor; font-family: Arial;">@codeDataModels[i].CodeDataDesc0</span>
                            </th>
                        </tr>
                        buttonChecked = "";
                        if (foreColor == "#0000ff")
                        {
                            foreColor = "#a54000";
                        }
                        else
                        {
                            foreColor = "#0000ff";
                        }
                    }
                }
            </table>
        </td>
        <td style="vertical-align: top;">
            <table>
                <tr>
                    <th colspan="3">
                        @Html.Raw(HttpUtility.HtmlDecode(Html.ValidationMessageFor(m => m.DeliveryTypeId, "", new { id = "DeliveryTypeId-error" }).ToHtmlString()))
                    </th>
                </tr>
                @{
                    buttonChecked = "checked='checked'";
                    foreColor = "#0000ff";
                    codeDataModels = ArchitectureLibraryCacheData.LookupCache.CodeTypeModels.First(x => x.CodeTypeNameDesc == "DeliveryType").CodeDataModelsCodeDataNameId;
                    for (int i = 0; i < codeDataModels.Count; i++)
                    {
                        <tr>
                            <td style="padding-right: 9px; vertical-align: top;">
                                <input @buttonChecked class="form-control" id="radDeliveryTypeId@(i)" name="DeliveryTypeId" style="color: #000000; font-weight: 900;" type="radio" value="@codeDataModels[i].CodeDataNameId" />
                            </td>
                            <th>
                                <span class="col-form-label" style="color: @foreColor; font-family: Arial;">@codeDataModels[i].CodeDataDesc0</span>
                            </th>
                        </tr>
                        buttonChecked = "";
                        if (foreColor == "#0000ff")
                        {
                            foreColor = "#a54000";
                        }
                        else
                        {
                            foreColor = "#0000ff";
                        }
                    }
                }
            </table>
        </td>
    </tr>
</table>
