    @Html.LabelFor(m => m.ContactUsTelephoneCountryId, new { @class = "col-form-label" })&nbsp;<span style="color: #0000ff; font-weight: bold;">*</span>
    @Html.DropDownListFor(m => m.ContactUsTelephoneCountryId, new SelectList(ArchitectureLibraryCacheData.DemogInfoCache.DemogInfoCountrySelectListItemsName, "Value", "Text", Model.ContactUsTelephoneCountryId), "---", new { @class = "form-control", style = "float: left; font-size: 14px; width: 90%;" })
    @Html.Raw(HttpUtility.HtmlDecode(Html.ValidationMessageFor(m => m.ContactUsTelephoneCountryId, "", new { id = "ContactUsTelephoneCountryId-error", style = "width: 90%;" }).ToHtmlString()))
</div>
<div class="row" style="text-align: left;">
