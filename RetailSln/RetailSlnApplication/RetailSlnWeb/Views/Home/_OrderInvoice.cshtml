@using RetailSlnModels
@model OrderInvoiceModel
<div class="center container">
    <h2 style="color: #a54000; font-weight: bold; letter-spacing: 4px; text-transform: uppercase;">
        Order&nbsp;&nbsp;Receipt
    </h2>
    <h4>
        <span style="color: #0000ff; font-weight: bold;">Your order has been processed successfully</span>
        @*<br />
        Check your email for a copy of the receipt*@
    </h4>
    <a href="@Url.Action("DownloadFile", "Home", new { fileName = Model.InvoiceFileNamePdf })" style="color: #cd5c5c; font-family: Arial; font-size: 18px; font-weight: bold; text-decoration: underline;">Download Invoice...#@Model.OrderHeaderId</a>
    <br />
    @Html.Raw(Model.InvoiceHtmlString)
    <embed src="~/Invoices/@Model.InvoiceFileNamePdf" type="application/pdf" style="width: 100%; height: 900px;" />
</div>
