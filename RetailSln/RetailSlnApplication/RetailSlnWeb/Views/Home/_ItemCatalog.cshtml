@using RetailSlnModels
@model ItemCatalogModel
@Html.Raw(File.ReadAllText(Server.MapPath("~/Files/ItemCatalog/" + Model.ItemCatalogHtmlFileName)))
<script type="text/javascript">
    function ParentCategoryId_onclick() {
        var selectedValue = document.getElementById("ParentCategoryId").value;
        var url = "@Url.Action("ItemCatalog", "Home", new { id = -1 })";
        url = url.replace("-1", selectedValue);
        window.location.href = url;
        document.getElementById("ParentCategoryId").selectedIndex = 0;
    }
</script>
