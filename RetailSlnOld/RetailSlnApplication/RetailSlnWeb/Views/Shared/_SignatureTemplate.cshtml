@using ArchitectureLibraryCacheData
@{
    long clientId = ArchLibCache.ClientId;
}
<div style="text-align: left;">
    <br />
    Thanking You,
    <br />
    Sincerely,
    <br />
    <span style="color: #000000; font-weight: bold;">@ArchLibCache.GetApplicationDefault(clientId, "Business", "AdminRepresentativeTitle")</span>
    <br />
    <span style="color: #000000; font-weight: bold;">@ArchLibCache.GetApplicationDefault(clientId, "BusinessName1", "")</span>
    <br />
    <span style="color: #000000;">
        @ArchLibCache.GetApplicationDefault(clientId, "AddressLine1", "")
        <br />
        @ArchLibCache.GetApplicationDefault(clientId, "AddressLine1A", "")
        <br />
        @ArchLibCache.GetApplicationDefault(clientId, "AddressLine2", "")
        <br />
        @ArchLibCache.GetApplicationDefault(clientId, "AddressCityName", ""), @ArchLibCache.GetApplicationDefault(clientId, "AddressStateAbbrev", ""), @ArchLibCache.GetApplicationDefault(clientId, "AddressZipCode", "")
        <br />
        <a href="tel: @ArchLibCache.GetApplicationDefault(clientId, "ContactPhoneHref", "")" style="color: #0000ff; font-size: 14px; font-weight: bold; text-decoration: underline;" target="_blank">@ArchLibCache.GetApplicationDefault(clientId, "ContactPhoneFormatted", "")</a>&nbsp;<i style="color: #000000; font-weight: bold;" class="fa fa-phone"></i>&nbsp;Phone
        <br />
        <a href="sms: @ArchLibCache.GetApplicationDefault(clientId, "ContactTextPhoneHref", "")" style="color: #0000ff; font-size: 14px; font-weight: bold; text-decoration: underline;" target="_blank">@ArchLibCache.GetApplicationDefault(clientId, "ContactTextPhoneFormatted", "")</a>&nbsp;<img src="~/Images/SMSIcon1.png" style="height: 27px; width: 27px;" />&nbsp;SMS / Message / Text
        <br />
        <a style="color: #0000ff; font-size: 14px; font-weight: bold; text-decoration: underline;" target="_blank" href="https://api.whatsapp.com/send?phone=@(ArchitectureLibraryCacheData.ArchLibCache.GetApplicationDefault(ArchitectureLibraryCacheData.ArchLibCache.ClientId, "ContactWhatsAppPhone", ""))">@ArchitectureLibraryCacheData.ArchLibCache.GetApplicationDefault(ArchitectureLibraryCacheData.ArchLibCache.ClientId, "ContactWhatsAppPhoneFormatted", "")</a>&nbsp;<img src="~/Images/WhatsApp1.png" style="height: 27px; width: 27px;" />&nbsp;WhatsApp
        <br />
        <a href="@ArchLibCache.GetApplicationDefault(clientId, "BaseUrl", "" )" target="_blank">@ArchLibCache.GetApplicationDefault(clientId, "BaseUrl", "")</a>
        <br />
        @DateTime.Now.ToString("ddd MMM-dd-yyyy hh:mm:ss tt")
    </span>
</div>
