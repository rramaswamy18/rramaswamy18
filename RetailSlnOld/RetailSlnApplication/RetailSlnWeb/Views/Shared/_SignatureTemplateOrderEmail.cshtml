@using ArchitectureLibraryCacheData
@{
    long clientId = ArchLibCache.ClientId;
    var baseUrl = ArchLibCache.GetApplicationDefault(clientId, "BaseUrl", "");
}
<div style="text-align: left;">
    <br />
    Thanking You,
    <br />
    Sincerely,
    <br />
    <span style="color: #000000; font-weight: bold;">@ArchLibCache.GetApplicationDefault(clientId, "BusinessName1", "")</span>
    <br />
    <span style="color: #000000;">
        @ArchLibCache.GetApplicationDefault(clientId, "AddressLine1", "")
        <br />
        @ArchLibCache.GetApplicationDefault(clientId, "AddressCityName", ""), @ArchLibCache.GetApplicationDefault(clientId, "AddressStateAbbrev", ""), @ArchLibCache.GetApplicationDefault(clientId, "AddressZipCode", "")
        <br />
        <a href="@ArchLibCache.GetApplicationDefault(clientId, "BaseUrl", "" )" style="text-decoration: underline;" target="_blank">@ArchLibCache.GetApplicationDefault(clientId, "BaseUrl", "")</a>
        <br />
        <a href="@ArchLibCache.GetApplicationDefault(clientId, "BaseUrl", "" )/@Url.Action("ContactUs", "Home")" style="text-decoration: underline;" target="_blank">Click here to contact us</a>
        <br />
        <a href="mailto:@ArchLibCache.GetApplicationDefault(clientId, "FromEmailAddress", "")" style="text-decoration: underline;" target="_blank">@ArchLibCache.GetApplicationDefault(clientId, "FromEmailAddress", "")</a>
        <br />
        @DateTime.Now.ToString("ddd MMM-dd-yyyy hh:mm:ss tt")
    </span>
</div>
