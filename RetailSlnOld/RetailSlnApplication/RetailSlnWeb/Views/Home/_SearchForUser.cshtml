@using RetailSlnModels
@model SearchForUserModel
<div class="center" style="display: table;">
    @{
        int index = 0;
        foreach (var searchForUserDataModel in Model.SearchForUserDataModels)
        {
            index++;
            <div style="display: table-row;">
                <div class="text-center" style="border-collapse: collapse; border-color: #000000; border-style: solid; border-width: 1px; display: table-cell; padding:5px; vertical-align: middle; width: 4%;">
                    <input id="orderCreatedFor@(index - 1)" name="orderCreatedFor" onchange="javascript: return orderCreatedFor_onchange(@index, @searchForUserDataModel.PersonId, @searchForUserDataModel.CorpAcctLocationId, '@searchForUserDataModel.EmailAddress', '@searchForUserDataModel.LocationName.Replace("'", "\\'")');" type="radio" value="" />
                </div>
                <div class="text-right" style="border-collapse: collapse; border-color: #000000; border-style: solid; border-left-style: none; border-width: 1px; display: table-cell; padding: 5px; vertical-align: middle; width: 4%;">
                    @index.
                </div>
                <div class="text-left" style="border-collapse: collapse; border-color: #000000; border-style: solid; border-left-style: none; border-width: 1px; display: table-cell; padding: 5px; width: 40%;">
                    @searchForUserDataModel.LocationName
                    <br />
                    @(searchForUserDataModel.CorpAcctLocationModel.DemogInfoAddressModel.AddressLine1 + " " + @searchForUserDataModel.CorpAcctLocationModel.DemogInfoAddressModel.AddressLine2 + " " + @searchForUserDataModel.CorpAcctLocationModel.DemogInfoAddressModel.CityName + " " + @searchForUserDataModel.CorpAcctLocationModel.DemogInfoAddressModel.StateAbbrev + " " + @searchForUserDataModel.CorpAcctLocationModel.DemogInfoAddressModel.ZipCode)
                </div>
                <div class="text-left" style="border-collapse: collapse; border-color: #000000; border-style: solid; border-left-style: none; border-width: 1px; display: table-cell; padding: 5px; width: 17%;">
                    @searchForUserDataModel.FirstName
                </div>
                <div class="text-left" style="border-collapse: collapse; border-color: #000000; border-style: solid; border-left-style: none; border-width: 1px; display: table-cell; padding: 5px; width: 17%;">
                    @searchForUserDataModel.LastName
                </div>
                <div class="text-left" style="border-collapse: collapse; border-color: #000000; border-style: solid; border-left-style: none; border-width: 1px; display: table-cell; padding: 5px; width: 17%;">
                    @searchForUserDataModel.EmailAddress
                </div>
            </div>
        }
    }
</div>
