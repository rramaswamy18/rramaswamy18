@model RetailSlnModels.CheckoutModel
@{
    string divWidth;
    try
    {
        var userAgent = HttpContext.Current.Request.UserAgent.ToLower();
        bool mobileDevice = Request.Browser.IsMobileDevice;
        //Not using right now
        if (userAgent.Contains("iphone;")) //iPhone
        {
            divWidth = "100%;";
        }
        else if (userAgent.Contains("ipad;") || userAgent.Contains("macintosh;"))
        {
            divWidth = "63%";
        }
        else
        {
            divWidth = "45%;";
        }
        //Using this right now
        //mobileDevice = true;
        if (mobileDevice)
        {
            divWidth = "90%";
        }
        else
        {
            divWidth = "45%";
        }
    }
    catch
    {
        divWidth = "45%;";
    }
}
<div class="container center" id="divOrderProcess" style="width: @divWidth;">
    <div class="row" style="text-align: left;">
        <div class="row" style="text-align: left;">
            <span style="color: #000000; font-size: 18px; font-weight: bold; ">For fast & quick checkout...</span>
            <a href="@Url.Action("CheckoutGuest", "Home")" style="color: #0000ff; font-size: 15px; font-weight: bold; padding-left: 5px; text-decoration: underline;">Click here to checkout as guest...</a>
            <br style="clear: both;" />
            <div style="width: 100%; height: 18px; border-bottom: 1px solid black; text-align: center">
                <span style="color: #a54000; font-size: 27px; background-color: #f3f5f6;">
                    OR
                </span>
            </div>
            <br style="clear: both;" />
            <span style="color: #000000; font-size: 23px; font-weight: bold; letter-spacing: 4px; text-transform: uppercase;">checkout</span>&nbsp;<span style="color: #0000ff; font-size: 23px; font-weight: bold;">(Returning Users)</span>
            <ul style="font-size: 14px; font-weight: bold; margin-left: 7px; padding-left: 5px; text-align: left;">
                <li>
                    If this your first time?&nbsp;
                    <a href="@Url.Action("RegisterUserProf", "Home")" style="color: #ff0000; font-size: 14px; padding-left: 5px; text-decoration: underline;">Click here to register...</a>
                </li>
                <li>
                    Did you forget your password?&nbsp;
                    <a href="@Url.Action("ResetPassword", "Home")" style="color: #0000ff; font-size: 14px; padding-left: 5px; text-decoration: underline;">Click to reset...</a>
                </li>
            </ul>
        </div>
        <form id="formLoginUserProfData">
            @Html.Partial("_LoginUserProfData", Model.LoginUserProfModel)
        </form>
        <button class="loginRegisterbtn" id="checkoutLoginUser" onclick="javascript: return checkoutLoginUser_onclick();" style="letter-spacing: 7px; text-transform: uppercase; width: 100%;" type="button">login</button>
        <div class="row" style="text-align: left;">
            <ul style="font-size: 14px; font-weight: bold; margin-left: 7px; padding-left: 5px; text-align: left;">
                <li>
                    If this your first time?&nbsp;
                    <a href="@Url.Action("RegisterUserProf", "Home")" style="color: #ff0000; font-size: 14px; padding-left: 5px; text-decoration: underline;">Click here to register...</a>
                </li>
                <li>
                    Did you forget your password?&nbsp;
                    <a href="@Url.Action("ResetPassword", "Home")" style="color: #0000ff; font-size: 14px; padding-left: 5px; text-decoration: underline;">Click to reset...</a>
                </li>
                <li>
                    Still facing issues?&nbsp;
                    <a href="@Url.Action("ContactUs", "Home")" style="color: #0000ff; font-size: 14px; text-decoration: underline;" target="_blank">Click to Contact Us...</a>
                </li>
            </ul>
            <ul style="font-size: 14px; font-weight: bold; margin-left: 7px; padding-left: 5px; text-align: left;">
                <li>
                    Enter email address, password, answer captcha
                </li>
                <li>
                    Click <span style="color: #ff0000; font-size: 23px; letter-spacing: 4px; text-transform: uppercase;">login</span> to continue
                </li>
            </ul>
        </div>
    </div>
</div>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script src="~/Include/orderItemCode1.js" type="text/javascript"></script>
<script src="~/Include/searchDataCode.js" type="text/javascript"></script>
